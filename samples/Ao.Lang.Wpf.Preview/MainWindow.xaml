<Window x:Class="Ao.Lang.Wpf.Preview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ao.Lang.Wpf.Preview"
        d:DataContext="{local:DesignViewModel}"
        xmlns:l="https://github.com/Cricle/Ao.Lang"
        Title="{l:Lang title}" mc:Ignorable="d" Height="450" Width="800">
    <!--Although he has wavy lines, he is normal-->
    <StackPanel>
        <Button Content="{l:Lang QQQ}" Foreground="Red" Width="100" Height="100"/>
        <Button Content="{l:Lang buy}" Foreground="Red" Width="100" Height="100"/>
        <Button Foreground="Red" Width="100" Height="100"
                DataContext="{Binding ElementName=Tbx}">
            <Button.Content>
                <l:Lang Key="welcome">
                    <l:LangArgument Value="{Binding DataContext.Text}"/>
                </l:Lang>
            </Button.Content>
        </Button>
        <TextBox x:Name="Tbx" Text="123"></TextBox>
    </StackPanel>
</Window>
